<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/navigation_home">
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.catnip.foodfood.presentation.fragmenthome.HomeFragment"
        android:label="@string/title_tab_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.catnip.foodfood.presentation.fragmentcart.CartFragment"
        android:label="@string/title_tab_home"
        tools:layout="@layout/fragment_home" >
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.catnip.foodfood.presentation.fragmentdetail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="food"
            app:argType="com.catnip.foodfood.local.database.entity.Food"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>